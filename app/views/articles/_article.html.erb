<%= article.user_id %>
<%= current_user.id %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Title</th>
      <th>Content</th>
      <!-- <th colspan="3"></th> -->
      <th>Action</th>
    </tr>
  </thead>

  <tbody>   
      <tr>
        <td><%= image_tag article.avatars.empty? ? "missing_avatar_thumb.jpg" : article.avatars[0].url(:thumb) %></td>
        <td><%= link_to article.title, article %></td>
        <td><%= article.content %></td>
        <!-- <td><%#= link_to 'Show', article %></td> -->
        <td><%= link_to 'Edit', edit_article_path(article) if article.user_id == current_user.id %></td>
        <!--<td><%#= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>    
  </tbody>
</table>