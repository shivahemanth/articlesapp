<p id="notice"><%= notice %></p>

<h1>Article Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_attachments.each do |article_attachment| %>
      <tr>
        <td><%= article_attachment.article_id %></td>
        <td><%= article_attachment.avatar %></td>
        <td><%= link_to 'Show', article_attachment %></td>
        <td><%= link_to 'Edit', edit_article_attachment_path(article_attachment) %></td>
        <td><%= link_to 'Destroy', article_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article Attachment', new_article_attachment_path %>
