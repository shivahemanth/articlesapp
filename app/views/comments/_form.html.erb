<%= form_for([@article, @article.comments.build]) do |form| %>
 

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :comment_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, id: :comment_content, class: "form-control" %>
  </div>

 
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
